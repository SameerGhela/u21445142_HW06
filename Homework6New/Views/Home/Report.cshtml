@model IEnumerable<Homework6New.Models.order_items>
@{
    ViewBag.Title = "Report";
}

<h2>Mountain Bike Order Report</h2>

<div id="chartContainer"></div>

<script type="text/javascript">

    $(function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light2",
            animationEnabled: true,
            title: {
                text: "Mountain Bike Order Report"
            },
            data: [
            {
                type: "column",
                dataPoints: [
                    { y: 163, label: "January" },
					{ y: 153, label: "February" },
					{ y: 200, label: "March" },
					{ y: 205, label: "April" },
					{ y: 140, label: "May" },
					{ y: 135, label: "June" },
					{ y: 130, label: "July" },
					{ y: 148, label: "August" },
                    { y: 155, label: "September" },
                    { y: 136, label: "October" },
                    { y: 130, label: "November" },
                    { y: 80, label: "December" }
                ],

                //You can add dynamic data from the controller as shown below. Check the controller and uncomment the line which generates dataPoints.
                //dataPoints: @Html.Raw(ViewBag.DataPoints),
            }
            ]
        });
        chart.render();
    });
</script>

